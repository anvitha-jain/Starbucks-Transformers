<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amruthasingh.starbucks_transformers.MainActivity">


        <EditText
            android:id="@+id/citybox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/passwordtext"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:layout_toEndOf="@+id/passwordtext"
            android:layout_toRightOf="@+id/passwordtext"
            android:ems="10"
            android:hint="Email ID"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/passwordbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/citybox"
            android:layout_alignStart="@+id/citybox"
            android:layout_centerVertical="true"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:password="true" />


        <TextView
            android:id="@+id/firstnametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/citybox"
            android:layout_alignBottom="@+id/citybox"
            android:layout_alignEnd="@+id/passwordtext"
            android:layout_alignRight="@+id/passwordtext"
            android:text="Email:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/passwordtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/passwordbox"
            android:layout_alignBottom="@+id/passwordbox"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="Password:"
            android:textStyle="bold" />


        <Button
            android:id="@+id/bregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="73dp"
            android:background="@color/black"
            android:text="Login"
            android:textColor="@color/white" />

    </RelativeLayout>
