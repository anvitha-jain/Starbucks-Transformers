package starbucks ;

import static org.junit.Assert.*;
import org.junit.After;
import org.junit.Before;
import org.junit.Test;

public class PinScreenTest
{
    PinEntryMachine pinEntry ;
    

    public PinScreenTest()
    {
    }

    @Before
    public void setUp()
    {
        pinEntry = new PinEntryMachine();
    }

    @Test
    public void PinMachineTest1()
    {
        pinEntry.number("1");
        pinEntry.number("2");
        pinEntry.number("3");
        pinEntry.backspace();
        assertEquals("starbucks.TwoPinDigits", pinEntry.getCurrentState());
    }

    @Test
    public void PinMachineTest2()
    {
        pinEntry.number("1");
        pinEntry.number("2");
        pinEntry.number(" ");
        pinEntry.number("3");
        assertEquals("starbucks.NoPinDigits", pinEntry.getCurrentState());
    }
            
    @After
    public void tearDown()
    {
    }
}
