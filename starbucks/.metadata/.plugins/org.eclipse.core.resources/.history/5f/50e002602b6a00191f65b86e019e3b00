

package starbucks ;

/** My Cards Screen */
public class MyCards extends Screen
{

	
    public MyCards()
    {

    }
    
    /**
     * Get Display Contents
     * @return Display Contents
     */
    public String display()
    {
    	MyStarbucksCard  myStarbucksCard = MyStarbucksCard.getInstance();
    	double balance = myStarbucksCard.getBalance();
    	String msg = "$"  + String.format ("%.2f", balance);
    	    	
    	return msg;
    }
    
    /**
     * Send Touch Events to the Chain
     * @param x Touch X Coord.
     * @param y Touch Y Coord..
     */
    public void touch(int x, int y)
    {    
    	
    	if(x == 3 && y == 3)
    	{
    		MyCardsPay myCardsPay = new MyCardsPay();
    		getFrame().setCurrentScreen( myCardsPay ) ;    	    	    
    	}
    	else if(x == 2 && y == 4)
    	{
    		MyCardsOptions myCardsOption = new MyCardsOptions();
    		getFrame().setCurrentScreen( myCardsOption ) ;
    	}
		 
    }
       
}
