

package starbucks;

/** Settings Screen */
public class Settings extends Screen
{  
   
    public Settings()
    {
    	
    }
    
    
    /**
     * Get Display Contents
     * @return Display Contents
     */
    public String display()
    {
    	String msg;
    	
    	msg = "Add Card\n" +
    		  "Delete Card\n" +
    		  "Billing\n" + 
    		  "Passcode\n\n"+  // extra new line required
    		  "About|Terms\n"+
    		  "Help";
    	
    	return msg;        
    }
    
    /**
     * Send Touch Events to the Chain
     * @param x Touch X Coord.
     * @param y Touch Y Coord.
     */
    public void touch(int x, int y)
    {   
    	if((x ==1 || x == 2 || x ==3) && (y == 1))    		
    	{    
    		AddCard addCardScreen = new AddCard();
    		getFrame().setCurrentScreen( addCardScreen ) ;
    	}  
    }
 
    
    
    
    
    
   
}
